<odoo>
    <!-- Sale Order -->
    <record id="view_sale_order_form_renew_due_date" model="ir.ui.view">
        <field name="name">sale.order.form.renew.due.date</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="after">
              
                <field name="renew_due_date"/>
                <field name="renewal_followup_done"/>
            
            </xpath>
        </field>
    </record>
</odoo>
